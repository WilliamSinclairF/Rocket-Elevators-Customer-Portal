@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container">
    <div class="d-flex justify-content-center col-12">
        <form id="account" method="post">
            <h4>Log in to access your Rocket Elevators account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger text-center"></div>
            <div class="form-group col-8">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control col-4" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-8">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control col-4" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group col-8">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group col-12">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>
            <div class="form-group col-12">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create new portal account</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
